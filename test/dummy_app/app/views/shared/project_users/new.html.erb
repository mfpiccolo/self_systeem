<% content_for :tabbar_title do %>
  Add User to <%= @project.name %>
<% end %>

<div class="form-panel clearfix">
  <ul class="breadcrumbs">
    <li><%= link_to @project.name, [@organization, @project] %></li>
    <li><%= link_to "Members", [@organization, @project, :members] %></li>
    <li class="current"><a href="#">New</a></li>
  </ul>

  <%= simple_form_for @member, url: [@organization, @project, :members], method: :post do |f| %>
    <%= f.input :email %>
    <%= f.input :name %>
    <%= f.input :role do %>
      <%= f.select :role, ProjectUser::ROLES, include_blank: true %>
    <% end %>
    <%= f.button :submit, class: "small button radius right" %>
  <% end %>
</div>
