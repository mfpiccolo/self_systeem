<% content_for :tabbar_title do %>
  Edit Project Member: <%= display_user @project_user.user %>
<% end %>

<div class="form-panel clearfix">
  <ul class="breadcrumbs">
    <li><%= link_to @project.name, [@organization, @project] %></li>
    <li><%= link_to "Members", [@organization, @project, :members] %></li>
    <li class="current"><a href="#">Edit</a></li>
  </ul>

  <%= simple_form_for @project_user, url: [@organization, @project, :member, id: @project_user] do |f| %>
    <%= f.input :role, collection: ProjectUser::ROLES, include_blank: true %>
    <%= f.button :submit, class: "tiny button radius right" %>
  <% end %>
</div>
