<% content_for :tabbar_title do %>
  <%= @budget_item.new_record? ? "New" : "Edit" %> Budget
<% end %>

<div class="form-panel clearfix">
  <ul class="breadcrumbs">
    <li><%= link_to @project.name, [@organization, @project] %></li>
    <li><%= link_to "Budget", [@organization, @project, :budget_items] %></li>
    <li class="current"><a href="#"><%= @budget_item.new_record? ? "New" : "Edit" %></a></li>
  </ul>

  <%= simple_form_for [@organization, @project, @budget_item] do |f| %>
    <div class="row">
      <div class="small-12 large-4 columns">
        <%= f.input :amount %>
      </div>
      <div class="small-12 large-4 columns">
        <%= f.input :area_id, collection: @areas.map { |a| [a.name, a.id] } %>
      </div>
      <div class="small-12 large-4 columns">
        <%= f.input :category_id, collection: @categories.map { |c| [c.name, c.id] } %>
      </div>
    </div>

    <%= f.button :submit, class: "small button radius right" %>
  <% end %>
</div>
