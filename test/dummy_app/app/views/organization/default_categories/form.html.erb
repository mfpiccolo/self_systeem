<% content_for :tabbar_title do %>
  <%= @organization.name %>
<% end %>

<div class="form-panel clearfix">
  <ul class="breadcrumbs">
    <li><%= link_to @organization.name, @organization %></li>
    <li><%= link_to "edit", edit_organization_path(@organization, anchor: "categories") %></li>
    <li class="current"><a href="#"><%= @category.new_record? ? "New" : "Edit" %> Category</a></li>
  </ul>

  <%= simple_form_for [@organization, @category] do |f| %>
    <%= f.input :name, required: false %>
    <%= f.button :submit, class: "tiny button radius right" %>
  <% end %>
</div>
