<% content_for :tabbar_title do %>
  Edit Project Member: <%= display_user @organization_user.user %>
<% end %>

<div class="form-panel clearfix">
  <ul class="breadcrumbs">
    <li><%= link_to @organization.name, [@organization] %></li>
    <li><%= link_to "Members", [@organization, :members] %></li>
    <li class="current"><a href="#">Edit</a></li>
  </ul>



  <%= simple_form_for @organization_user, url: organization_member_path(@organization, @organization_user) do |f| %>
    <%= f.input :role, collection: OrganizationUser::ROLES, include_blank: true %>
    <%= f.button :submit, class: "tiny button radius right" %>
  <% end %>
</div>
