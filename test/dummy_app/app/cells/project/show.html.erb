<section id="project-info">
  <h2>Project Information</h2>

  <div class="row-pad row">
    <div class="small-12 large-4 columns">
      <h4>Location</h4>

      <%= simple_format(@project.location) %>
    </div>
    <div class="small-12 large-4 columns">
      <h4>Description</h4>

      <p><%= simple_format(@project.description) %></p>
    </div>
    <div class="small-12 large-4 columns">
      <div class="row">
        <div class="small-12 large-6 columns">
          <h4>OVERALL BUDGET</h4>
          <div><%= number_to_currency(@project.total_budget) %></div>
        </div>
        <div class="small-12 large-6 columns">
          <h4>SELECTED BUDGET</h4>
          <div><%= number_to_currency(@project.selected_total_amount) %></div>
        </div>
      </div>
      <div id="current-balance" class="row">
        <div class="small-12 large-3 columns">
          <h4>CURRENT BALANCE</h4>
        </div>
        <div class="small-12 large-9 columns">
          <span><%= number_to_currency(@project.total_budget - @project.selected_total_amount) %></span>
        </div>
      </div>
    </div>
  </div>
</section>
